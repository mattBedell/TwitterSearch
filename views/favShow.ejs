<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Favorites</title>
    <link rel="stylesheet" href="/css/searchTwitter.css" media="screen" title="no title">

    </script>
  </head>
  <body>
    <div class="listContainerFavs">
    <% tweets.forEach( (obj) => { %>
      <div class="analysisContainer analysisContainer<%= obj.tweet.tweetId %>">
        <div class="emotionContainer">
          <div class="indvContainer">
            <div class="eText">Joy:</div>
            <div class="backBar joyE">
              <div class="colorFill joyColor j<%= obj.tweet.tweetId %>"></div>
              <input class="joyNum joyColorNum<%=obj.tweet.tweetId %>"type="hidden" name="name" value="<%=obj.analysis.docEmotions.joy%>">
            </div>
          </div>
          <div class="indvContainer">
            <div class="eText">Anger:</div>
            <div class="backBar angerE">
              <div class="colorFill angerColor a<%= obj.tweet.tweetId %>"></div>
              <input class="joyNum angerColorNum<%=obj.tweet.tweetId %>"type="hidden" name="name" value="<%=obj.analysis.docEmotions.anger%>">
            </div>
          </div>
          <div class="indvContainer">
            <div class="eText">Disgust:</div>
            <div class="backBar disgustE">
              <div class="colorFill disgustColor d<%= obj.tweet.tweetId %>"></div>
              <input class="joyNum disgustColorNum<%=obj.tweet.tweetId %>"type="hidden" name="name" value="<%=obj.analysis.docEmotions.disgust%>">
            </div>
          </div>
          <div class="indvContainer">
            <div class="eText">Fear:</div>
            <div class="backBar fearE">
              <div class="colorFill fearColor f<%= obj.tweet.tweetId %>"></div>
              <input class="joyNum fearColorNum<%=obj.tweet.tweetId %>"type="hidden" name="name" value="<%=obj.analysis.docEmotions.fear%>">
            </div>
          </div>
        </div>
        <div class="spacerLine"></div>
        <div class="sentContainer">
          <div class="sentText"><span class="sentColor sentColor<%= obj.tweet.tweetId %>"></span></div>
          <div class="sentimentScore sentimentScore<%= obj.tweet.tweetId %>"></div>
        </div>
        <div class="spacerLine"></div>
        <div class="conceptsContainer">
          <div class="conceptsTitle">Concepts</div>
        </div>
      </div>
      <div class="cardContainer">
        <div class="tweetContainer2 tweetContainer<%=obj.tweet.tweetId%>">
            <div class="profileImg" style='background-image: url(<%= obj.tweet.profileImg %>);'></div>
            <div class="tweetText"><span class='userName'><%= obj.tweet.screenName %>: </span><%= obj.tweet.text %></div>
        </div>
        <form class="analyzeTweet" action="favorites/<%= obj._id %>?_method=DELETE" method="post">
          <div class="buttonContainer">
            <input type="submit" class="deleteBtn b<%= obj.tweetId %>" name="myBtn" value="Delete!">
          </div>
        </form>
      </div>
    <%  }) %>
    </div>
    <script src="/analyseFav.js"type="text/javascript"></script>
  </body>
</html>
